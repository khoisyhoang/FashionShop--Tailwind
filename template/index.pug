include ../mixins/product-item.pug
include ../mixins/feedback.pug
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        script(src="https://cdn.tailwindcss.com")
        link(rel="stylesheet" href="assets/css/style.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")
        script(src="tailwind.config.js")
    body 
        //- Top header
        div(class="Top-head bg-main sm:py-[10px] py-[9px]")
            div(class="container mx-auto px-[16px]")
                div(class="inner-wrap flex text-white")
                    div(class="inner-head flex-1 text-center sm:text-[14px] text-[12px]" ) 
                        |Đăng ký để được giảm giá 20%.
                        a(href="#" class="underline ml-[5px]") Đăng Ký Ngay
                    button(class="md:flex hidden items-center ") 
                        i(class="fa-solid fa-x block text-[14px] ")
        //- End Top header
        //- Header
        header(class="header my-[24px]")
            div(class="container mx-auto px-[16px]")
                div(class="inner-wrap flex justify-between items-center gap-[40px]")
                    div(class="inner-brand flex justify-between items-center gap-[16px]")
                        i(class="fa-solid fa-bars text-[24px]  md:hidden")
                        div(class="inner-logo text-main text-[32px] font-[700]") 28.SHOP
                    ul(class="inner-menu md:flex hidden justify-between gap-[24px] font-[400]") 
                        li(class="inner-menu-item") Giới Thiệu
                        li(class="inner-menu-item") Sản Phẩm
                        li(class="inner-menu-item") Bài Viết
                        li(class="inner-menu-item") Liên Hệ
                    form(class="inner-search hidden lg:flex items-center m-[0px] gap-[12px] flex-1 bg-[#F0F0F0] py-[12px] px-[16px] rounded-[62px] ")
                        i(class="fa-solid fa-magnifying-glass text-[#00000066]")
                        input(type="text" class=" bg-transparent focus:outline-none " placeholder="Tìm kiếm sản phẩm..." )  
                    
                    div(class="inner-icon flex gap-[14px] text-[20px]")
                        i(class="fa-solid fa-magnifying-glass md:hidden")
                        i(class="fa-solid fa-cart-shopping")
                        i(class="fa-regular fa-user")
        //- End Header
        //- Section 1
        .section1(class="bg-[#F2F0F1] ")
            div(class="container mx-auto px-[16px]")
                .inner-wrap(class="md:flex items-center overflow-hidden")
                    .inner-content(class="md:w-[50%] lg:pt-[0px] pt-[40px] md:pb-[13px] pb-0")
                        h1.content-title(class="xl:text-[48px] lg:text-[32px] md:text-[29px] sm:text-[40px] text-[30px] font-[900] text-main") CHUYÊN THỜI TRANG PHONG CÁCH, HIỆN ĐẠI
                        p.inner-desc(class="xl:text-[16px] text-[14px] font=[400] text-[#00000099] xl:mt-[30px] mt-[20px]") Chúng tôi chuyên cung cấp nhiều loại quần áo được chế tác tỉ mỉ, được thiết kế để làm nổi bật cá tính của bạn và đáp ứng phong cách của bạn.
                        a.button(href="#" class="bg-main block justify-center text-white mx-auto md:inline-flex flex py-[16px] px-[65px] rounded-[62px] xl:my-[50px] my-[30px]") Xem ngay
                        ul.stats(class="flex justify-center xl:text-[40px] lg:text-[24px] md:text-[18px] text-[24px] font-[700] text-main flex-wrap sm:gap-x-[0] sm:gap-y-[0] gap-x-[60px] gap-y-[10px]")
                            li(class="md:border-r-[1px] md:border-[#0000001A] lg:pr-[32px] lg:mr-[32px] sm:pr-[16px] pr-0 mr-[16px] md:text-left text-center sm:pl-0 pl-[55px]") 
                                div.figure(class="") 200+
                                div.categ(class="xl:text-[16px] text-[12px] font-[400] text-[#00000099]") Thương Hiệu 
                            li(class="md:border-r-[1px] md:border-[#0000001A] lg:pr-[32px] lg:mr-[32px] pr-[16px] mr-[16px] md:text-left text-center") 
                                div.figure(class="") 2,000+
                                div.categ(class="xl:text-[16px] text-[12px] font-[400] text-[#00000099]") Sản Phẩm Chất Lượng 
                            li(class="md:text-left text-center") 
                                div.figure(class="") 30,000+
                                div.categ(class="xl:text-[16px] text-[12px] font-[400] text-[#00000099]") Khách Hàng     
                    .inner-image(class="flex-1")
                        img(src="assets/images/section1-main.jpg" class="w-[100%] ")
            //- End Section 1
            //- Section2
        .brand(class="bg-main py-[43px]")
            div(class="container mx-auto px-[16px]")
                .inner-wrap(class="flex sm:gap-x-[60px] gap-x-[35px] gap-y-[30px] justify-center flex-wrap")
                    img(src="assets/images/brands/versace.png", alt=""  class="mx-auto sm:h-[32px] h-[22px]")
                    img(src="assets/images/brands/zara.png", alt=""  class="mx-auto sm:h-[32px] h-[22px]")
                    img(src="assets/images/brands/gucci.png", alt=""  class="mx-auto sm:h-[32px] h-[22px]")
                    img(src="assets/images/brands/prada.png", alt=""  class="mx-auto sm:h-[32px] h-[22px]")
                    img(src="assets/images/brands/calvin.png", alt=""  class="mx-auto sm:h-[32px] h-[22px]")

        //- End Section2
        //- Section3
        .section3(class="md:my-[62px] my-[40px] border-[#0000001A] border-b-[1px] md:pb-[64px] pb-[40px]")
            div(class="container mx-auto px-[16px] text-center")
                h2.inner-title(class="sm:text-[48px] text-[32px] font-[700] text-center md:mb-[54px] mb-[32px]") THỜI TRANG MỚI
                .inner-wrap(class="flex sm:justify-start lg:justify-start md:justify-center justify-center gap-[20px] flex-wrap  ")
                    +product-item("assets/images/section3/p1.jpg", "Áo Thun Nam Đơn Giản", "120.000đ")
                    +product-item("assets/images/section3/p2.jpg", "Quần Jean Nam Phong Cách", "480.000đ", "600.000đ", "-20%")
                    +product-item("assets/images/section3/p3.jpg", "Áo Sơ Mi Caro", "220.000đ")
                    +product-item("assets/images/section3/p4.jpg", "Áo Thun Nam Sọc Cam", "126.000đ", "180.000đ", "-30%")
                
                .expand(class="font-[500] md:inline-flex  text-main rounded-[62px] border-[1px] border-[#0000001A] py-[16px] px-[63px] mx-auto md:mt-[40px] mt-[30px] text-center") Xem tất cả
        //- End Section3
        //- Section4
        .section4(class="border-[#0000001A] ")
            div(class="container mx-auto px-[16px] text-center")
                h2.inner-title(class="sm:text-[48px] text-[32px] font-[700] text-center md:mb-[54px] mb-[32px]") GIẢM GIÁ NHIỀU
                .inner-wrap(class="flex sm:justify-start lg:justify-start md:justify-center justify-center gap-[20px] flex-wrap  ")
                    +product-item("assets/images/section4/p1.png", "Áo Thun Nam Đơn Giản", "120.000đ")
                    +product-item("assets/images/section4/p2.png", "Quần Jean Nam Phong Cách", "480.000đ", "600.000đ", "-20%")
                    +product-item("assets/images/section4/p3.png", "Áo Sơ Mi Caro", "220.000đ")
                    +product-item("assets/images/section4/p4.png", "Áo Thun Nam Sọc Cam", "126.000đ", "180.000đ", "-30%")
                
                .expand(class="font-[500] md:inline-flex  text-main rounded-[62px] border-[1px] border-[#0000001A] py-[16px] px-[63px] mx-auto md:mt-[40px] mt-[30px] text-center") Xem tất cả
        //- End Section4
        //- Section5
        .section5(class=" mt-[76px] sm:mb-[86px] mb-[40px]")
            div(class="container mx-auto px-[16px] text-center")
                .inner-wrap(class="sm:py-[70px] py-[28px] sm:px-[64px] px-[24px] bg-[#F0F0F0] rounded-[40px]")
                    .inner-title(class="sm:mb-[60px] mb-[16px] font-[700] sm:text-[48px] text-[32px]") DANH MỤC NỔI BẬT
                    .inner-content(class="grid lg:grid-cols-3 grid-cols-1 sm:gap-[20px] gap-[16px]")
                        
                        a(href="#" class="block sm:h-[289px] h-[190px] relative") 
                            img(src="assets/images/section5/p1.jpg", alt="" class="rounded-[20px] w-[100%] h-[100%] object-cover ")
                            h3(class="absolute sm:top-[26px] sm:left-[36px] top-[17px] left-[24px] text-main font-[700] sm:text-[36px] text-[24px]") Đơn Giản
                        a(href="#" class="block sm:h-[289px] h-[190px] lg:col-span-2 relative") 
                            img(src="assets/images/section5/p2.jpg", alt="" class="rounded-[20px] w-[100%] h-[100%] object-cover")
                            h3(class="absolute sm:top-[26px] sm:left-[36px] top-[17px] left-[24px] font-[700] sm:text-[36px] text-[24px]" ) Lịch Lãm
                        a(href="#" class="block sm:h-[289px] h-[190px] lg:col-span-2 relative") 
                            img(src="assets/images/section5/p3.jpg", alt="" class="rounded-[20px] w-[100%] h-[100%] object-cover")
                            h3(class="absolute sm:top-[26px] sm:left-[36px] top-[17px] left-[24px] font-[700] sm:text-[36px] text-[24px]" ) Dạ Hội
                        a(href="#" class="block sm:h-[289px] h-[190px] relative") 
                            img(src="assets/images/section5/p4.jpg", alt="" class="rounded-[20px] w-[100%] h-[100%] object-cover")
                            h3(class="absolute sm:top-[26px] sm:left-[36px] top-[17px] left-[24px] font-[700] sm:text-[36px] text-[24px]" ) Gym
        //- End Section5
        //- Section 6
        .section6(class="md:mt-[86px] mt-[40px] md:mb-[80px] mb-[60px]")
            div(class="container mx-auto px-[16px]")
                .inner-wrap()
                    .inner-title(class="font-[700] md:text-[48px] text-[32px] text-main") CẢM NHẬN CỦA KHÁCH HÀNG
                    .inner-content(class="flex md:flex-nowrap flex-wrap gap-[20px]") 
                        -
                            var feed = [
                                {
                                    stars: 4,
                                    sub: "Le Van A",
                                    content: "Tôi rất ngạc nhiên trước chất lượng và kiểu dáng của những bộ quần áo từ 28.SHOP. Từ trang phục thường ngày đến trang phục thanh lịch, mọi món đồ tôi mua đều vượt quá sự mong đợi của tôi."
                                },
                                {
                                    stars: 5,
                                    sub: "Le Van B",
                                    content: "Việc tìm kiếm quần áo phù hợp với phong cách cá nhân của tôi từng là một thử thách cho đến khi tôi khám phá ra 28.SHOP. Hàng loạt lựa chọn mà họ cung cấp thực sự đáng chú ý."
                                },
                                {
                                    stars: 3,
                                    sub: "Le Van A",
                                    content: "Là một người luôn tìm kiếm những món đồ thời trang độc đáo, tôi rất vui khi tình cờ biết đến 28.SHOP. Việc lựa chọn quần áo không chỉ đa dạng mà còn bắt kịp xu hướng mới nhất."
                                }
                            ];
                        each item in feed
                            +feedback(item) 
        //- End Section 6
        //- Section 7
        .section7(class="relative")
            div(class="container mx-auto px-[16px]")
                .inner-wrap(class="bg-main md:py-[36px] py-[32px] md:px-[64px] px-[24px] flex flex-wrap justify-between items-center rounded-[20px] gap-y-[20px]")
                    .inner-content(class="text-white lg:text-[40px] text-[30px] font-[700] md:w-[47%] w-full") CẬP NHẬT VỀ ƯU ĐÃI MỚI NHẤT CỦA CHÚNG TÔI
                    form.inner-form(class="m-0 md:w-[40%] w-full")
                        .register(class="bg-white py-[12px] pl-[16px] rounded-[62px] truncate")
                            i(class="fa-regular fa-envelope")
                            input(type="text" placeholder="Nhập email của bạn..." class="text-main focus:outline-none ml-[12px]") 
                        a.direct(href="#" class="block bg-white text-main text-center font-[500] rounded-[62px] md:mt-[14px] mt-[12px] py-[12px]") Đăng Ký Nhận Tin
        //- End Section 7
        //- Footer
        .footer(class="bg-[#F0F0F0] sm:mt-[-96px] mt-[-162px]") 
            div(class="container mx-auto px-[16px]")
                .inner-wrap(class="sm:pt-[146px] pt-[202px] pb-[30px] flex flex-wrap sm:justify-between justify-start gap-[32px] sm:pb-[50px] border-b-[1px] border-[#0000001A]")
                    div(class="lg:w-[248px] w-full")
                        div(class="font-[700] sm:text-[33px] text-[28px] text-main") 28.SHOP
                        p(class="text-[#00000099] text-[14px] font-[400] lg:mt-[25px] lg:mb-[35px] my-[20px]") Chúng tôi có những bộ quần áo phù hợp với phong cách của bạn và bạn có thể tự hào khi mặc.
                        div(class="flex gap-[12px] ")
                            i(class="fa-brands fa-twitter")
                            i(class="fa-brands fa-facebook")
                            i(class="fa-brands fa-instagram")
                    div(class="sm:w-auto w-[45%]")
                        h2(class="font-[500] text-[16px] mb-[26px]") CÔNG TY 
                        ul(class="text-[#00000099] text-[16px] font-[400] flex flex-col gap-[10px]")
                            li(class="hover:text-main") Giới Thiệu          
                            li(class="hover:text-main") Sản Phẩm                    
                            li(class="hover:text-main") Công Việc          
                            li(class="hover:text-main") Việc làm
                    div(class="sm:w-auto w-[45%]")
                        h2(class="font-[500] text-[16px] mb-[26px]") Trợ giúp 
                        ul(class="text-[#00000099] text-[16px] font-[400] flex flex-col gap-[10px]")
                            li(class="hover:text-main") Hỗ Trợ Khách Hàng          
                            li(class="hover:text-main") Thông Tin Đơn Hàng                    
                            li(class="hover:text-main") Điều Khoản & Điều Kiện          
                            li(class="hover:text-main") Chính Sách 
                    div(class="sm:w-auto w-[45%]")
                        h2(class="font-[500] text-[16px] mb-[26px]") FAQ 
                        ul(class="text-[#00000099] text-[16px] font-[400] flex flex-col gap-[10px]")
                            li(class="hover:text-main") Tài Khoản          
                            li(class="hover:text-main") Quản Lý Đơn Hàng                    
                            li(class="hover:text-main") Đơn Hàng          
                            li(class="hover:text-main") Thanh Toán
                    div(class="sm:w-auto w-[45%]")
                        h2(class="font-[500] text-[16px] mb-[26px]") Tài nguyên 
                        ul(class="text-[#00000099] text-[16px] font-[400] flex flex-col gap-[10px]")
                            li(class="hover:text-main") Sách Miễn Phí          
                            li(class="hover:text-main") Bài Viết                    
                            li(class="hover:text-main") Kiến Thức          
                            li(class="hover:text-main") Youtube
                .lower-wrap(class="flex flex-wrap md:justify-between mt-[30px] gap-y-[20px] justify-center sm:pb-[82px] pb-[30px]")
                    p(class="") 28.SHOP © 2024, All Rights Reserved
                    .payment-list(class="flex flex-wrap gap-[12px]")
                        img(src="assets/images/footer/p1.svg", alt="" class="w-[47px] h-[30px] bg-white rounded-[5px] p-[7px] object-contain")
                        img(src="assets/images/footer/p2.svg", alt="" class="w-[47px] h-[30px] bg-white rounded-[5px] p-[7px] object-contain")
                        img(src="assets/images/footer/p3.svg", alt="" class="w-[47px] h-[30px] bg-white rounded-[5px] p-[7px] object-contain")
                        img(src="assets/images/footer/p4.svg", alt="" class="w-[47px] h-[30px] bg-white rounded-[5px] p-[7px] object-contain")
                        img(src="assets/images/footer/p5.svg", alt="" class="w-[47px] h-[30px] bg-white rounded-[5px] p-[7px] object-contain")
                        


        //- End Footer