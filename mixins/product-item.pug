mixin product-item(path, title, cur_price, org_price, percentage)
    .product__item(class="md:w-auto sm:w-[30%] w-[47%] ")
        .product__image(class="aspect-[1/1] md:h-[295px] h-[169px] ") 
            img(src=path, alt="" class="rounded-[20px] w-[100%] ")
        .product__content
            .product__title(class="mt-[20px] md:text-[18px] text-[14px] font-[700] break-words text-left") #{title}
            .product__rating(class="flex gap-[13px] my-[10px] mx-auto") 
                .product__star(class="flex gap-[6px]")
                   
                    span(class="fa fa-star checked text-[#FFC633]")
                    span(class="fa fa-star checked text-[#FFC633]")
                    span(class="fa fa-star checked text-[#FFC633]")
                    span(class="fa fa-star checked text-[#FFC633]")
                    span(class="fa fa-star checked text-[#FFC633]")                              
                .product__star-count
                    span(class="text-[14px] font-[400] text-[#00000099]") 5/5
            .product-price(class="flex flex-wrap gap-[10px] items-center mx-auto")
                .product__current-price(class="md:text-[18px] text-[14px] font-[700]") #{cur_price}
                if(org_price)
                    .product__org-price(class="md:text-[14px] text-[12px] font-[700] text-[#00000066] line-through") #{org_price}
                if(percentage)
                    .product__sale(class="md:text-[12px] text-[10px] font-[500] text-[#FF3333] bg-[#FF33331A] rounded-[62px] px-[12px] py-[6px]") #{percentage}
